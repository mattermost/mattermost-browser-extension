{
  "manifest_version": 2,
  "minimum_chrome_version": "38",
  "version": "0.0.1",
  "author": "Joram Wilander",
  "name": "Mattermost Demo Extension",
  "short_name": "mattermost-chrome-extension",
  "description": "Demo extension showing how to connect to a Mattermost user using OAuth2.",
  "permissions": ["identity", "storage"],
  "browser_action": {
    "default_popup": "dist/main.html",
    "default_icon": {
      "32": "/public/img/icon.png"
    },
    "default_title": "Mattermost Demo Extension"
  },
  "icons": {
    "128": "/public/img/icon.png"
  }
}
